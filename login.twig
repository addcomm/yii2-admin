
<body class="hold-transition login-page">
    {{ void(this.beginBody()) }}

    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>FAMED</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to Portal</p>

            {% set form = active_form_begin({
                "id" : "login-form",
                "method" : 'post',
                "action" : url.toRoute('site/login'),
                "enableAjaxValidation" : false,
                "enableClientValidation" : true,
                "options" : {
                    "class" : "login-form",
                    "style" : style
                },
                'fieldConfig' : {
                    'options' : {'tag' : false },
                    },
                })
            %}
                {{  form.errorSummary(model) | raw }}
                <div class="form-group field-loginform-email">
                    <input type="email" name="LoginForm[email]" autofocus class="form-control" placeholder="Email" value="{{ model.email }}">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <p class="help-block help-block-error"></p>
                </div>
                <div class="form-group field-loginform-password">
                    <input type="password" name="LoginForm[password]" class="form-control" placeholder="Password" value="{{ model.password }}">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <p class="help-block help-block-error"></p>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" name="LoginForm[rememberMe]"> Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            {{ active_form_end() }}

        </div>
        <!-- /.login-box-body -->
    </div>

    {{ void(this.endBody()) }}
</body>



<div class="big-top-bar row dark-pink">

    <div class="top-bar-wrapper">
        <div class="top-bar-left">
            <a href="{{ path(['/site/login']) }}" class="btn btn-link btn-close">
                <i class="fa ion-ios-close-empty"></i>
            </a>
        </div>
    </div>

    <div class="top-bar-title">{{ t('frontend/views/site', 'reset_password') }}</div>

</div>

<div class="row site-reset-password">

    <div class="col-xs-12">
        {% set form = active_form_begin({
        'id' : 'request-password-reset-form',
        'options' : {'class' : ''},
        }) %}
        {{ form.field(model, 'email').input('email', { 'placeholder': t('frontend/views/site', 'email') | capitalize, 'class': 'form-control margin-top-10px' }).label('') | raw }}

        <div class="form-group bottom-bar bottom-bar-border-top margin-top-20px">
            <button type="submit" class="btn btn-block btn-main-action">
                {{  t('frontend/views/site', 'send') | capitalize }}
            </button>
        </div>

        {{ active_form_end() }}
    </div>
</div>

<div class="password-reset-success {% if model.hasErrors() or model.email is empty %}hidden{% endif %}">
    <div class="container">
        <div class="success-center-wrapper">
            <div class="success-center">
                <h4>{{ t('frontend/views/site', 'password_requested') | capitalize }}</h4>
                <p class="margin-top-30px">{{ t('frontend/views/site', 'password_sent_to_your_email') | capitalize }}, {{ model.email }}.</p>
                <p class="margin-top-30px"><a href="/site/login">{{ t('frontend/views/site', 'to_login_page') | capitalize }}</a></p>
            </div>
        </div>
    </div>
</div>